source 'https://rubygems.org'

gem 'rails', '4.0.0'

gem 'haml'
gem 'coffee-rails'
gem 'jbuilder'
gem 'jquery-rails'
gem 'sass'
gem 'sass-rails'
gem 'sqlite3'
gem 'uglifier'

group :doc do
  # bundle exec rake doc:rails generates the API under doc/api.
  gem 'sdoc', require: false
end

group :test, :development do
  gem 'fabrication-rails'
  gem 'pry'
  gem 'pry-debugger'
end

group :test do
  gem 'nyan-cat-formatter'
  gem 'rspec-rails'
  gem 'simplecov'
end
